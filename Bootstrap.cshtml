@helper ModalPopup(string id="mymodal", string title="Modal Title", bool showCloseButton=true)
{
    //modal popup içinde olması gereken kodları burada yazdırıp bunu istediğim her yerde kullanabilirim.
    <!-- Modal -->
    <div class="modal fade" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id + "_label")" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" id="@(id + "_header")">
                    <h3 class="modal-title" id="@(id + "_label")">@title</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="@(id + "_body")">
                    @*<p> Burası modal'ın body kısmı olacak. Bizim için burada yorumlarımız olacak. bunlar dışarıdan gelen değerler olacağı için, her bir elemente farklı yani uniq olan bir id vermeliyim ki dışarıdan eriştiğimde istediğim gibi kontrol edebileyim.. bu id'lere javascript kodu ile erişeceğim. (id + "_body") şeklinde isimlendirdiğimde parametre olarak yorum verdiğimde burası yorum_body olacak.</p>*@
                </div>
                <div class="modal-footer" id="@(id + "_footer")">
                    @if (showCloseButton)
                    {
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

                    }
                </div>
            </div>
        </div>
    </div>
}
